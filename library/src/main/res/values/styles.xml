        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small.Day</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>

    <style name="TextAppearance.AppCompat.Small.Day">

    </style>

    <style name="TextAppearance.AppCompat.Small.DayHeader">
        <item name="android:textStyle">bold</item>
